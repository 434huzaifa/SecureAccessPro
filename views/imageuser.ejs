<%- include('common/base1.ejs',{title:"User Image"}) %>
<style>
    img {
        width: 500px;
        height: 500px;
  max-width: 100%;
  object-fit: contain;
}
</style>
<% if (user.name!="-") { %>
    <div class="d-flex flex-row-reverse pe-5 pt-5">
        <button type="button" onclick="getUserData()" class="btn btn-outline-primary " data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasExample">View</button>
    </div>
<% } %>

<div class="d-flex justify-content-center align-items-center">
<form onsubmit="updateUser(event)">
    <div class="mb-3" >
        <label for="exampleFormControlInput1" class="form-label">Name</label>
        <input type="text" name="name" class="form-control" id="exampleFormControlInput1">
        <div class="mb-3">
            <label for="formFile" class="form-label">Image</label>
            <input class="form-control" name="img" type="file" id="formFile">
          </div>
    </div>
<div id="imageContainer">
    <img src="" id="image" >
</div>
<button type="submit" class="btn btn-primary mt-5">Upload</button>
</form>
</div>
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel" style="width: 500px;">
    <div class="offcanvas-header">
      <h5 id="offcanvasRightLabel">User Info</h5>
      <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body p-5">
        <div class="d-flex flex-column">
            <label  class="form-label">Name</label>
            <input type="text"  class="form-control" id="username" readonly>
            <label  class="form-label">Photo</label>
            <div>
                <img id="userimage" alt="" style="width: 400px;height: 400px;">
            </div>
            <p class="text-danger fs-1 text-bold text-center" id="userstatus"></p>
        </div>
        
    </div>
  </div>



<%- include('common/base2.ejs') %>