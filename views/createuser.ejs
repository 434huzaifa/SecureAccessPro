<%- include('common/base1.ejs',{title:"Create User"}) %>

<div class="d-flex flex-row  justify-content-center align-items-center full-viewheight">
    <div class="flex-fill  px-9">
        <h1 class="mb-5 text-secondary text-center">Create User</h1>
        <form onsubmit="createUser(event)">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">User ID</label>
              <input type="number" class="form-control" id="exampleInputEmail1" name="userid">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="pass">
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
          </form>
    </div>
    <div class="border-start h-100"></div>
    <div class="flex-fill  px-9" id="users">
        <h1 class="mb-5 text-secondary text-center">View User</h1>
        <% for( let i = 0; i < users.length; i++ ) { %>
            <div class="bg-kindofgray rounded px-4 pb-4 mb-2">
                <div class="d-flex justify-content-end pt-1" style="margin-right: -20px;">
                    <span class="badge bg-primary rounded-pill mb-2 "><%= i+1 %></span>
                    </div>
                <div>
                    <input type="text" class="form-control mb-2" readonly value=<%= users[i].name %>>
                </div>
            </div>
        <% } %>

        
        <div class="d-flex justify-content-end">
            <button class="btn btn-primary ">View</button>
        </div>
    </div>
</div>
<%- include('common/base2.ejs') %>